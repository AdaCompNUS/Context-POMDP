# after install kinectic as documented
# install navigation
sudo apt-get install ros-kinetic-navigation

# install opencv for python3 virtualenv
source ~/workspace/bts_rl/bin/activate
pip3 install opencv-contrib-python


# this solve the confliction of python3 opencv with ros kinectic
# just change the name of the cv2.so file to any other name.

sudo mv /opt/ros/kinetic/lib/python2.7/dist-packages/cv2.so ~/workspace
sudo mv ~/workspace/cv2.so /opt/ros/kinetic/lib/python2.7/dist-packages/cv2_bcp.so

## install tkinter

sudo apt-get install python3-tk